<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:clickable="true"
    android:background="@drawable/ripple">

    <RelativeLayout
        android:id="@+id/rl_playlist_collage"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:padding="5dp">
        <ImageView
            android:id="@+id/iv_thumb_1"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />
        <ImageView
            android:id="@+id/iv_thumb_2"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />
        <ImageView
            android:id="@+id/iv_thumb_3"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:id="@+id/iv_thumb_4"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:id="@+id/iv_thumb_dummy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_music_note_24dp"
            android:visibility="visible"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_playlist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@id/rl_playlist_collage"
        android:layout_toRightOf="@id/rl_playlist_collage"
        android:layout_toLeftOf="@id/tv_songs_count"
        android:textSize="16sp"
        android:textColor="@color/TitleColorBlack"
        android:text="Fancy playlist name"
        android:maxLines="2"
        android:layout_toStartOf="@id/tv_songs_count" />

    <TextView
        android:id="@+id/tv_songs_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textSize="12sp"
        android:text="Songs: 212"/>
</RelativeLayout>